@{
    Layout = null;
}

<style>
    .chat-wrapper {
        height: 100%;
        display: flex;
        flex-direction: column;
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    .chat-box {
        flex: 1;
        overflow-y: auto;
        padding: 15px;
    }

    .chat-input-area {
        padding: 10px;
        background: white;
        border-top: 1px solid #ddd;
    }
</style>


<link rel="stylesheet" href="~/css/chat.css" />

<div class="chat-wrapper">

    <div class="chat-header">
        <div class="chat-title">📚 Millet Kütüphanesi Yapay Zeka Asistanı</div>
        <div class="chat-subtitle" style="color:#000 !important; opacity:1 !important;">
            Merhaba! Ben Millet Kütüphanesi Chatbotu. İlk gösterim olarak size test veri setimden cevaplar bulup sorularınıza yanıt vereceğim. Lütfen sorunuzu sorun.
        </div>
    </div>

    <div id="chat-box" class="chat-box"></div>

    <div class="chat-input-area">
        <input id="message" class="chat-input" type="text" placeholder="Bir şey yazın..." />

        <div class="chat-buttons">
            <button class="chat-btn send-btn" onclick="sendMessage()">➤</button>
            @*<button class="chat-btn mic-btn" onclick="startListening && startListening()">🎤</button>
            <button class="chat-btn photo-btn" onclick="openCamera()">📷</button>*@
        </div>
    </div>

    <video id="qrVideo" class="qr-video"></video>

    <div id="camera-container" style="display:none;">
        <div id="camera-close" onclick="closeCamera()">✖</div>
        <video id="camera" autoplay playsinline></video>
    </div>

    <canvas id="captureCanvas" style="display:none;"></canvas>

</div>
